apiVersion: apps/v1
kind: Deployment
metadata:
  name: mahendeploy
  namespace: myapp
  selector:
    matchLabels:
      app: alpine
  replicas: 4
  template:
    metadata:
      labels:
        app: alpine
    spec:
      containers:
      - name: alpine
        image: alpine
        command: ["sleep", "3600"]
        ports:
        - containerPort: 8080
         
